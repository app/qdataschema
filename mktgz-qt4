# Creates tgz archive of sources for building deb package
# Than you have to use this tgz to build deb package with pbuilder
SRC=`pwd`
DIR=`pwd|sed s/".*\/"//`
VER=`cat ./VERSION`
TMPDIR=/tmp/tgz-tmp`date +%s%N`

rm -Rf $TMPDIR
rm -f $DIR-$VER.tgz
mkdir $TMPDIR
cd $TMPDIR
cp -R $SRC ./
sed -i s/"^#qt4[ ]*"// $DIR/debian/control
sed -i s/"^#qt4[ ]*"// $DIR/debian/rules
tar zcf $SRC/$DIR-$VER.tgz $DIR
rm -Rf $TMPDIR
cd $SRC
