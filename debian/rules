#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

#qt3 export QTDIR=/usr/share/qt3
#qt4 export QTDIR=/usr/share/qt4

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	
	touch configure-stamp

build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.

#qt4	$(MAKE) -e QT_VER=4 
#qt3	$(MAKE) -e QT_VER=3
	$(MAKE) doc
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
#	-$(MAKE) clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/qdataschema
#qt4	$(MAKE) install -e QT_VER=4 \
#qt4	INSTALL_ROOT=$(CURDIR)/debian/qdataschema \
#qt4	LIBDIR=/usr/lib \
#qt4	BINDIR=/usr/bin \
#qt4	DOCDIR=/usr/share/doc/qdataschema \
#qt4	INCLUDEDIR=/usr/include/qdataschema

#qt3	$(MAKE) install -e QT_VER=3 \
#qt3	INSTALL_ROOT=$(CURDIR)/debian/qdataschema \
#qt3	LIBDIR=/usr/lib \
#qt3	BINDIR=/usr/bin \
#qt3	DOCDIR=/usr/share/doc/qdataschema \
#qt3	INCLUDEDIR=/usr/include/qdataschema

	mkdir -p $(CURDIR)/debian/qdataschema/usr/bin
	mkdir -p $(CURDIR)/debian/qdataschema/usr/lib
#qt4	mkdir -p $(CURDIR)/debian/qdataschema/usr/share/qt4/lib
#qt4	mkdir -p $(CURDIR)/debian/qdataschema/usr/share/qt4/bin
#qt4	mkdir -p $(CURDIR)/debian/qdataschema/usr/share/qt4/include/qdataschema
#qt3	mkdir -p $(CURDIR)/debian/qdataschema/usr/share/qt3/lib
#qt3	mkdir -p $(CURDIR)/debian/qdataschema/usr/share/qt3/bin
#qt3	mkdir -p $(CURDIR)/debian/qdataschema/usr/share/qt3/include/qdataschema

	mkdir -p $(CURDIR)/debian/qdataschema/usr/share/doc/qdataschema/html
	mkdir -p $(CURDIR)/debian/qdataschema/usr/share/doc/qdataschema/html-ru
	mkdir -p $(CURDIR)/debian/qdataschema/usr/share/doc/qdataschema/example
	cp -df ./lib/* $(CURDIR)/debian/qdataschema/usr/lib/
#qt4	cp -df ./bin/* $(CURDIR)/debian/qdataschema/usr/share/qt4/bin/
#qt4	cp -f ./src/lib/*.h $(CURDIR)/debian/qdataschema/usr/share/qt4/include/qdataschema
#qt3	cp -df ./bin/* $(CURDIR)/debian/qdataschema/usr/share/qt3/bin/
#qt3	cp -f ./src/lib/*.h $(CURDIR)/debian/qdataschema/usr/share/qt3/include/qdataschema
	cp -f ./doc/html/* $(CURDIR)/debian/qdataschema/usr/share/doc/qdataschema/html/
	cp -f ./doc/html-ru/* $(CURDIR)/debian/qdataschema/usr/share/doc/qdataschema/html-ru/
	cp -Rdf ./src/example/* $(CURDIR)/debian/qdataschema/usr/share/doc/qdataschema/example/
#qt4	cd $(CURDIR)/debian/qdataschema/usr/share/qt4/lib/ && ln -s $(CURDIR)/debian/qdataschema/usr/lib/* ./
#qt3	cd $(CURDIR)/debian/qdataschema/usr/share/qt3/lib/ && ln -s $(CURDIR)/debian/qdataschema/usr/lib/* ./


	
# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
